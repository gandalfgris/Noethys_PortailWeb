{% extends "ConnecthysBundle::layout.html.twig" %}

{% block page_content %}
    <h4 class="page-header">
        <small><i class="fa fa-info-circle"></i> Vous pouvez consulter ici la liste des inscriptions et demander des inscriptions à d'autres activités.</small>
    </h4>

    {% embed "ConnecthysBundle:Default:Widgets/widget-activite-item.html.twig" %}
    {% endembed %}

    {% embed "ConnecthysBundle:Default:Widgets/widget-activite-item.html.twig" %}
    {% endembed %}

    {% embed "ConnecthysBundle:Default:Widgets/widget-activite-item.html.twig" %}
    {% endembed %}

    {% embed "ConnecthysBundle:Default:Widgets/widget-activite-item.html.twig" %}
    {% endembed %}


    <!-- Modal : Demander une inscription -->
    <div class="modal fade" id="modal_demander_inscription" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content">

                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
                    <h4 class="modal-title" id="myModalLabel"><strong>Demander une inscription</strong></h4>
                </div>

                <div class="modal-body">

                    <form>
                        <input type="hidden" id="idindividu" value="0">
                    </form>

                    <div class="form-group">
                        <h4>Sélectionnez une activité et un groupe</h4>
                        <select id="choix_activite" class="form-control">


                            <option value="1-1">Accueil de loisirs - 3-6 ans</option>

                            <option value="1-2">Accueil de loisirs - 6-12 ans</option>



                            <option value="2-3">Garderie périscolaire - Groupe unique</option>


                        </select>
                    </div>

                    <!-- Box commentaires -->
                    <h4>Vous pouvez ajouter un commentaire</h4>
                    <div class="form-group">
                        <textarea id="commentaire" class="form-control" rows="2" maxlength="300" placeholder=""></textarea>
                    </div>

                    <!-- Div pour affiche erreur éventuelle de validation du form -->
                    <div id="message_erreur" class="text-red"></div>

                </div><!-- Fin modal body -->

                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Annuler</button>
                    <button type="button" class="btn btn-primary" id="envoyer">Valider</button>
                </div>

            </div>
        </div>
    </div>




{% endblock %}
